#sign_up
  .row
    .columns.centered
      %h2 Sign up
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .row
          .field.small-12.large-6.columns
            = f.label :first_name
            = f.text_field :first_name, autofocus: true
          .field.small-12.large-6.columns
            = f.label :last_name
            = f.text_field :last_name, autofocus: true
        .row
          .field.small-12.large-6.columns
            = f.label :email
            = f.email_field :email, autofocus: true
          .field.small-12.large-6.columns
            = f.label :identity_number
            = f.text_field :identity_number, autofocus: true
        .row
          .field.small-12.large-6.columns
            = f.label :upin
            = f.text_field :upin, autofocus: true
          .field.small-12.large-6.columns
            = f.label :phone_number
            = f.text_field :phone_number, autofocus: true
        .row
          .field.small-12.large-6.columns
            = f.label :speciality
            = f.text_field :speciality, autofocus: true
        .row
          .field.small-12.large-6.columns
            = f.label :password
            = f.password_field :password, autocomplete: "off"
          .field.small-12.large-6.columns
            = f.label :password_confirmation
            = f.password_field :password_confirmation, autocomplete: "off"
        .actions
          = f.submit "Sign up", class: 'button radius small'
      = render "devise/shared/links"
